<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/rtb_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rtb_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.RTB"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.CollaboratorsHome"
            android:exported="false" />
        <activity
            android:name=".view.UpdateProject"
            android:exported="false"
            android:label="@string/title_activity_update_project"
            android:theme="@style/Theme.RTB" />
        <activity
            android:name=".view.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ProjectHome"
            android:exported="false" />
        <activity
            android:name=".view.ViewProject"
            android:exported="false" />
        <activity
            android:name=".view.CreateProject"
            android:exported="false" />
        <activity
            android:name=".view.RequirementHome"
            android:exported="false" />
        <activity
            android:name=".view.ViewRequirement"
            android:exported="false" />
        <activity
            android:name=".view.CreateRequirement"
            android:exported="false" />
        <activity
            android:name=".view.UpdateRequirement"
            android:exported="false" />
        <activity
            android:name=".view.SignIn"
            android:exported="false" />
        <activity
            android:name=".view.SignUp"
            android:exported="false" />
    </application>

</manifest>