<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProjectHome"
    tools:ignore="MissingConstraints"
    android:background="@color/light_gray">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/appBar"
            android:name="com.rtb.rtb.view.components.AppBarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ph_text_view_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_home"

            android:textSize="30sp"
            android:textStyle="bold"

            android:layout_marginTop="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ph_constraint_layout_search_filters_components"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/ph_text_view_home_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <fragment
                    android:id="@+id/ph_text_input_search_project"
                    android:name="com.rtb.rtb.view.components.InputFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ph_linear_layout_filters_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ph_text_input_search_project">

                <Button
                    android:id="@+id/ph_button_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/blue_50"

                    android:text="@string/search_all"
                    android:textColor="@color/white"

                    android:textStyle="bold"

                    app:cornerRadius="32dp" />

                <Button
                    android:id="@+id/ph_button_actives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/green_50"

                    android:text="@string/search_actives"
                    android:textColor="@color/white"

                    android:textStyle="bold"

                    app:cornerRadius="32dp" />

                <Button
                    android:id="@+id/ph_button_inactivates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/red_50"
                    android:text="@string/search_inactives"

                    android:textColor="@color/white"
                    android:textStyle="bold"

                    app:cornerRadius="32dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/ph_list_view_of_projects"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:nestedScrollingEnabled="true"

            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ph_button_new_project"
            app:layout_constraintTop_toBottomOf="@id/ph_constraint_layout_search_filters_components" />

        <fragment
            android:id="@+id/ph_button_new_project"
            android:name="com.rtb.rtb.view.components.ButtonFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ph_list_view_of_projects" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>