<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SignUp">

    <LinearLayout android:gravity="end"
        android:id="@+id/logoRTB"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_amber"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/logoRTBLabel"
            style="@style/txtInterbold64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="0.8"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            tools:text="@string/app_name" />

        <TextView android:id="@+id/sloganRTBLabel"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:text="@string/slogan"
            android:gravity="right"
            style="@style/txtInterbold24"
            tools:text="@string/slogan"/>
    </LinearLayout>

    <TextView
        android:id="@+id/signInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRTB"
        style="@style/txtIntersemibold30"
        tools:text="@string/sign_in"
        tools:ignore="MissingConstraints" />

    <fragment
        android:id="@+id/emailAddress"
        android:name="com.rtb.rtb.view.components.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInTitle" />

    <fragment
        android:id="@+id/password"
        android:name="com.rtb.rtb.view.components.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailAddress" />

    <fragment
        android:id="@+id/signInBtn"
        android:name="com.rtb.rtb.view.components.ButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout android:gravity="start"
        android:id="@+id/linearRowNoAccount"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/signInBtn"
        tools:ignore="MissingConstraints">
        <TextView android:id="@+id/txtNoaccount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/no_account"
            android:textColor="@color/gray_600"
            android:textSize="16sp"
            android:fontFamily="@font/intermedium"
            tools:targetApi="p"/>
        <TextView android:id="@+id/signUpLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:text="@string/sign_up"
            android:textColor="@color/amber_500"
            android:textSize="16sp"
            android:fontFamily="@font/intermedium"
            tools:targetApi="p"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>