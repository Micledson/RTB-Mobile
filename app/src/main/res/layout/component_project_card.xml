<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="8dp"
app:cardUseCompatPadding="true"
tools:context=".view.projectComponents.ProjectCardComponent"
tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pc_overlay_view_is_active"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@color/green"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"

                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pc_constraint_layout_project_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"

                app:layout_constraintEnd_toStartOf="@id/pc_constraint_layout_buttons"
                app:layout_constraintStart_toEndOf="@id/pc_overlay_view_is_active">

                <TextView
                    android:id="@+id/pc_text_view_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="20sp"

                    android:textStyle="bold"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pc_text_view_project_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"

                    android:layout_marginBottom="16dp"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pc_text_view_project_name"
                    app:layout_constraintBottom_toTopOf="@id/pc_text_view_project_created_at"/>

                <TextView
                    android:id="@+id/pc_text_view_project_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/gray"

                    android:textSize="16sp"

                    app:layout_constraintTop_toBottomOf="@id/pc_text_view_project_alias"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pc_constraint_layout_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:layout_constraintEnd_toEndOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pc_image_view_read_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/pc_image_view_edit_block">

                    <ImageView
                        android:id="@+id/pc_image_view_read"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/blue"
                        android:src="@drawable/baseline_eye_24"

                        android:padding="7dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pc_image_view_edit_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/pc_image_view_read_block"
                    app:layout_constraintBottom_toTopOf="@id/pc_image_view_delete_block">

                    <ImageView
                        android:id="@+id/pc_image_view_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:background="@color/yellow"
                        android:src="@drawable/baseline_edit_24"

                        android:padding="7dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pc_image_view_delete_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/pc_image_view_edit_block"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/pc_image_view_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:background="@color/red"
                        android:src="@drawable/baseline_delete_24"

                        android:padding="7dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>