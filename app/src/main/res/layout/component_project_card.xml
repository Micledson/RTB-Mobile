<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:cardCornerRadius="8dp"
app:cardUseCompatPadding="true"
tools:context=".view.projectComponents.ProjectCardComponent"
tools:ignore="MissingConstraints">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rc_constraint_layout_project_content"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <android.gesture.GestureOverlayView
            android:id="@+id/rc_overlay_view_is_active"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/rc_text_view_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/gray"
            android:textSize="20sp"
            android:textStyle="bold"

            android:layout_marginTop="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rc_text_view_project_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/dark_gray"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rc_text_view_project_name"/>

        <TextView
            android:id="@+id/rc_text_view_project_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="16sp"

            android:textColor="@color/gray"

            android:layout_marginEnd="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rc_image_view_read"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:background="@color/blue"
            android:src="@drawable/baseline_eye_16" />

        <ImageView
            android:id="@+id/rc_image_view_edit"
            android:layout_width="75dp"
            android:layout_height="35dp"

            android:src="@drawable/baseline_edit_16"

            android:background="@color/yellow"

            app:layout_constraintTop_toBottomOf="@id/rc_image_view_read" />
        <ImageView
            android:id="@+id/rc_image_view_delete"
            android:layout_width="75dp"
            android:layout_height="35dp"

            android:background="@color/red"

            android:src="@drawable/baseline_delete_16"

            app:layout_constraintTop_toBottomOf="@id/rc_image_view_edit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>