                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vr_requirement_notes_field" />

            <!-- Requirement created at field -->
            <TextView
                android:id="@+id/vr_requirement_created_at_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="@string/requirement_created_at"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vr_requirement_notes_value" />

            <!-- Requirement created at value -->
            <TextView
                android:id="@+id/vr_requirement_created_at_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                tools:text="2023-11-06T14:30:00Z"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vr_requirement_created_at_field" />

            <!-- Requirement updated at field -->
            <TextView
                android:id="@+id/vr_requirement_updated_at_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:text="@string/requirement_updated_at"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vr_requirement_created_at_value" />

            <!-- Requirement updated at value -->
            <TextView
                android:id="@+id/vr_requirement_updated_at_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="2023-11-06T14:30:00Z"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vr_requirement_updated_at_field" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
